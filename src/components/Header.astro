---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h1 class="site-title"><a href="/">{SITE_TITLE}</a></h1>
		<div class="internal-links nav-desktop">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/workshops">Workshops</HeaderLink>
			<HeaderLink href="/research">Research</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
		<div class="nav-mobile">
			<svg width="30px" height="30px" viewBox="0 0 24 24" fill="none">
				<g clip-path="url(#clip0_105_1724)">
					<path d="M3 6.00098H21M3 12.001H21M3 18.001H21" stroke="#292929" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/>
				</g>
			<defs>
				<clipPath id="clip0_105_1724">
					<rect fill="white" height="24" transform="translate(0 0.000976562)" width="24"/>
				</clipPath>
			</defs>
		</svg>
	</div>
</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.9em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.internal-links {
		right: 0;
		left: 0;
		margin: auto;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.nav-desktop {
			display: none;
	}
	.nav-mobile {
		display: block;
		cursor: pointer;
	}
	@media (min-width: 782px) {
		.nav-desktop {
			display: block;
		}
		.nav-mobile {
			display: none;
		}
	}
</style>
