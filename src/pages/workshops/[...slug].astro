---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { WORKSHOP_COLLECTION } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection(WORKSHOP_COLLECTION);
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: {...post, collection: WORKSHOP_COLLECTION},
	}));
}
type Props = CollectionEntry<{WORKSHOP_COLLECTION}>;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data} collection={post.collection}>
	<Content />
</BlogPost>
