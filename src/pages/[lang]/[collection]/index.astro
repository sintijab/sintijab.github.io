---
import { type CollectionEntry, getCollection } from 'astro:content';
import DynamicPage from '../../../layouts/DynamicPage.astro';

import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, DE_COLLECTION, EN_COLLECTION } from '../../../consts';
import Posts from '../../../components/Posts.astro';

export async function getStaticPaths() {
	const en = await getCollection(EN_COLLECTION);
	const de = await getCollection(DE_COLLECTION);
	const posts = [
		...en,
		...de,
	];
	return posts.map(page => {
	const [collection, ...slug] = page.slug.split('/');
    return { params: { lang: page.collection, collection }, props: { ...page } }
  })
}

const { collection } = Astro.params;
const page = Astro.props;
const { Content } = await page.render();
const { pathname, origin } = Astro.url;
const lang = pathname.split('/').filter(e => e)[0] || 'en';
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				padding: 2em 0;
				margin: auto;
			}
			@media (min-width: 1080px) {
				main {
					width: 960px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				{(collection === 'about' || collection === 'contact') ? <Content /> : <Posts collection={collection as string} />}
			</section>
		</main>
		<Footer />
	</body>
</html>